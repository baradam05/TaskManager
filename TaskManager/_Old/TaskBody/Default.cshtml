@using TaskManager.Components
@using TaskManager.Models.Classes
@using TaskManager.Models.DbClasses
@{
    Assignment task = this.ViewBag.Task;
    string assignedBy = this.ViewBag.assignedBy;
    List<string> assignedTo = this.ViewBag.assignedTo;
    List<SubAssignment> subTasks = this.ViewBag.subTasks;
    Table tableType = this.ViewBag.tableType;
}

<form asp-controller="Home" asp-action="SubAssignmentChange" method="post" id="HomeForm_@task.AssignmentId">
    <input type="hidden" name="assignmentId" value="@task.AssignmentId" />
    <input type="hidden" name="isEditing" value="@(tableType == Table.Edit ? "true" : "false")" />

    <tr onclick="expandSubTasks(@task.AssignmentId)">
        <td>@this.ViewBag.Counter</td>

        @if (tableType != Table.Edit)
        {
            <td>@assignedBy</td>
        }
        else
        {
            <td>
                <select class="form-select form-select-sm" onclick="event.stopPropagation()">
                    @if (assignedTo.Count > 0)
                    {
                        <option selected disabled>@assignedTo[0]</option>
                        @for (int i = 1; i < assignedTo.Count; i++)
                        {
                            <option disabled>@assignedTo[i]</option>
                        }
                    }
                    else
                    {
                        <option disabled selected>No users assigned</option>
                    }
                </select>
            </td>

        }

        <td>@task.AssignedDate</td>

        <td>@(task.StartDate == null ? "-" : task.StartDate)</td>

        <td>
            @(task.EndDate)
            @if (this.ViewBag.IsLate && task.EndDate != null && tableType == Table.Default)
            {
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-exclamation-circle-fill text-danger" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4m.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2" />
                </svg>
            }
        </td>

        @if (tableType == Table.Done)
        {
            <td>@(task.Finished)</td>
        }

        <td>
            @this.ViewBag.finishedSubTasks / @this.ViewBag.assignedSubTasks
            @if (tableType == Table.Edit && task.Finished != null)
            {
                <span class="text-muted small ms-1">
                    (@task.Finished?.Date.ToString("dd.MM yyyy"))
                </span>
            }
        </td>

        @if (tableType == Table.Edit)
        {
            <td>
                <a asp-controller="Assignment" asp-action="Edit" asp-route-id="@task.AssignmentId" class="btn btn-secondary btn-sm" onclick="event.stopPropagation()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-gear-fill" viewBox="0 0 16 16">
                        <path d="M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872zM8 10.93a2.929 2.929 0 1 1 0-5.86 2.929 2.929 0 0 1 0 5.858z" />
                    </svg>
                </a>
                <a asp-controller="Assignment" asp-action="Delete" asp-route-id="@task.AssignmentId" class="btn btn-danger btn-sm" onclick="event.stopPropagation()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                        <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06m6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528M8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5" />
                    </svg>
                </a>
            </td>
        }
    </tr>

    <tr id="subTasks_@task.AssignmentId" hidden>
        <td colspan="6">
            <table class="table table-sm table-bordered mb-0">
                @foreach (SubAssignment subTask in subTasks)
                {
                    <vc:sub-task sub-task-id="@subTask.SubAssignmentId"></vc:sub-task>
                }
                <tr>
                    <td colspan="2" style="border: none;">
                        <button type="submit" class="btn btn-outline-secondary btn-sm w-100">SAVE</button>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</form>

<script>
    function expandSubTasks(id){
        let subTasks = document.getElementById("subTasks_" + id);
        subTasks.hidden = !subTasks.hidden;
    }

    document.getElementById('HomeForm_@task.AssignmentId').addEventListener('submit', function(e) {
        let inputs = document.getElementsByClassName('subTaskInput_@task.AssignmentId');
        let counter = 0;
        for (let i = 0; i < inputs.length; i++) {
            if (inputs[i].checked)
                counter++;
        }

        if (counter == @subTasks.Count) {
            if (!confirm('All sub-tasks are done. Are sure you want to finish the whole task ?')) {
                e.preventDefault();
            }
        }
        else if (@(task.Finished != null).ToString().ToLower()) {
            if (!confirm('This task is already finished. Are you sure you want to un-finish it?')) {
                e.preventDefault();
            }
        }
    });
</script>
