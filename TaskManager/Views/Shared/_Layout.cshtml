@using TaskManager.Models.Classes
@{
    bool isLoggedIn = Context.Session.GetString("login") != null;
    MyContext context = new();
    bool isLeader = false;
    if (isLoggedIn && context.Account.Find(int.Parse(Context.Session.GetString("login"))).LeaderId == null)
        isLeader = true;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskManager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TaskManager.styles.css" asp-append-version="true" />
</head>
<body>
    @if (isLoggedIn)
    {
        <header class="d-flex justify-content-between align-items-center p-3 bg-dark text-white mb-3">
            <div class="d-flex gap-3 align-items-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-calendar-check-fill" viewBox="0 0 16 16">
                    <path d="M4 .5a.5.5 0 0 0-1 0V1H2a2 2 0 0 0-2 2v1h16V3a2 2 0 0 0-2-2h-1V.5a.5.5 0 0 0-1 0V1H4zM16 14V5H0v9a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2m-5.146-5.146-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L7.5 10.793l2.646-2.647a.5.5 0 0 1 .708.708" />
                </svg>
                <a asp-controller="Home" asp-action="Index" class="text-white text-decoration-none">Tasks</a>
                @if (isLeader)
                {
                    <a asp-controller="Assignment" asp-action="Manage" class="text-white text-decoration-none">Manage tasks</a>
                }                
            </div>

            <div class="d-flex gap-3 align-items-center">
                @if (isLeader)
                {
                    <a asp-controller="Assignment" asp-action="Index" class="btn btn-sm btn-light">New task</a>
                }                

                <div class="dropdown">
                    <button class="btn btn-sm btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                            <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6" />
                        </svg>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a asp-controller="Account" asp-action="Manage" class="dropdown-item">Manage account</a></li>
                        <li><a asp-controller="Account" asp-action="Register" class="dropdown-item">Register</a></li>
                        <li><a asp-controller="Account" asp-action="Logout" class="dropdown-item text-danger">Log out</a></li>
                    </ul>
                </div>
            </div>
        </header>
    }
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
